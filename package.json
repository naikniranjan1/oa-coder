{
    "name": "oa-coder",
    "productName": "OA-Coder",
    "version": "1.0.0",
    "description": "AI-powered productivity assistant for developers and professionals with intelligent automation and workflow optimization",
    "main": "src/index.js",
    "scripts": {
        "setup": "npm install && npm start",
        "start": "npm run build:renderer && electron .",
        "package": "npm run build:renderer && electron-builder --dir",
        "make": "npm run build:renderer && electron-forge make",
        "build": "npm run build:renderer && electron-builder --config electron-builder.yml --publish never",
        "build:win": "npm run build:renderer && electron-builder --win --x64 --publish never",
        "publish": "npm run build:renderer && electron-builder --config electron-builder.yml --publish always",
        "lint": "eslint --ext .ts,.tsx,.js .",
        "postinstall": "electron-builder install-app-deps",
        "build:renderer": "node build.js",
        "watch:renderer": "node build.js --watch"
    },
    "keywords": [
        "productivity",
        "ai-assistant",
        "workflow-automation",
        "developer-tools",
        "task-management",
        "intelligent-automation",
        "productivity-enhancement"
    ],
    "author": {
        "name": "OA-Coder Team"
    },
    "license": "GPL-3.0",
    "dependencies": {
        "@anthropic-ai/sdk": "^0.56.0",
        "@deepgram/sdk": "^4.9.1",
        "@emnapi/runtime": "^1.5.0",
        "@google/genai": "^1.8.0",
        "@google/generative-ai": "^0.24.1",
        "axios": "^1.10.0",
        "better-sqlite3": "^9.6.0",
        "cors": "^2.8.5",
        "dotenv": "^17.0.0",
        "electron-squirrel-startup": "^1.0.1",
        "electron-store": "^8.2.0",
        "electron-updater": "^6.6.2",
        "express": "^4.18.2",
        "firebase": "^11.10.0",
        "firebase-admin": "^13.4.0",
        "jsonwebtoken": "^9.0.2",
        "keytar": "^7.9.0",
        "node-fetch": "^2.7.0",
        "openai": "^4.70.0",
        "portkey-ai": "^1.10.1",
        "react-hot-toast": "^2.5.2",
        "validator": "^13.11.0",
        "wait-on": "^8.0.3",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@electron/fuses": "^1.8.0",
        "@electron/notarize": "^2.5.0",
        "electron": "^30.5.1",
        "electron-builder": "^26.0.12",
        "electron-reloader": "^1.2.3",
        "esbuild": "^0.25.5",
        "prettier": "^3.6.2"
    }
}
